/* pages/history/history.wxss */
.container {
  padding-top: 0;
  min-height: 100vh;
  justify-content: flex-start;
}

.header {
  width: 100%;
  line-height: 80rpx;
  color: #fff;
  background-color: #49afcd;
  font-size: 34rpx;
  text-indent: 20rpx;
}

.item {
  width: 100%;
  line-height: 70rpx;
  border-bottom: 1rpx solid #dedede;
  font-size: 28rpx;
  text-align: center;
}

.btn-del {
  position: fixed;
  width: 100%;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
  bottom: 0;
  background-color: #DA4F49;
  color: #fff;
}