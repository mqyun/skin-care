/**index.wxss**/
.container {
  height: 100vh;
  padding-top: 50rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.btn-bind {
  margin-top: 50rpx;
  background-color: #49afcd;
  color: #fff;
  font-size: 28rpx;
}

.btn-logout {
  position: absolute;
  width: 90%;
  bottom: 10rpx;
  background-color: #DA4F49;
  color: #fff;
}

.history-tr {
  width: 90vw;
  margin-top: 100rpx;
  line-height: 70rpx;
  border-top: 1rpx solid #dedede;
  border-bottom: 1rpx solid #dedede;
  font-size: 32rpx;
  text-align: left;
  text-indent: 50rpx;
}